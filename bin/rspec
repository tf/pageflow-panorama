#!/usr/bin/env ruby
ENV['RAILS_ENV'] ||= 'test'
ENV['PAGEFLOW_RAILS_VERSION'] ||= '4.0.4'
ENV['PAGEFLOW_PLUGIN_ENGINE'] = 'pageflow_panorama'

dummy_root = File.expand_path("../spec/dummy/rails-#{ENV['PAGEFLOW_RAILS_VERSION']}", File.dirname(__FILE__))

begin
  load File.expand_path("../spring", __FILE__) if File.exists?(dummy_root)
rescue LoadError
end
require 'bundler/setup'

require 'pageflow/support'
Pageflow::Dummy.setup

load Gem.bin_path('rspec-core', 'rspec')
